<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Quoridge.App">
    <Application.Resources>

        <ResourceDictionary x:Name="theme" Source="Themes/Default.xaml"/>

        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor"
                    Value="{DynamicResource NavigationBarColor}" />
            <Setter Property="BarTextColor"
                    Value="{DynamicResource NavigationTextColor}" />
            <Setter Property="BackgroundImageSource"
                    Value="{DynamicResource Background}" />
        </Style>
        <Style TargetType="Image">
            <Setter Property="Source"
                    Value="{DynamicResource FlyCircle}" />
            <Setter Property="Source"
                    Value="{DynamicResource Circle}" />
            <Setter Property="Source"
                    Value="{DynamicResource Header}" />
            <Setter Property="Source"
                    Value="{DynamicResource Personal}" />
        </Style>
    </Application.Resources>
</Application>